<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.FavouriteFragment">

    <android.support.v7.widget.Toolbar
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="wrap_content">

    <com.miguelcatalan.materialsearchview.MaterialSearchView
        android:id="@+id/shirt_search_bar"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:hint="Search"
        android:textColorHint="@color/black"
        app:searchBackground="@color/white"
        app:searchSuggestionBackground="@color/white"
        app:searchBackIcon="@drawable/ic_arrow_back_black_24dp"
        app:searchCloseIcon="@drawable/ic_timer_black_24dp"
        app:searchSuggestionIcon="@drawable/ic_timer_black_24dp"
        android:layout_height="wrap_content">



    </com.miguelcatalan.materialsearchview.MaterialSearchView>


    </android.support.v7.widget.Toolbar>
</FrameLayout>